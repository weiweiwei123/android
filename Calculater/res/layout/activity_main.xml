<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"/>
     <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal" >

          <Button
              style="@style/btn01"
              android:text="MC"/>

           <Button
               style="@style/btn01"
               android:text="MR" />

            <Button
              style="@style/btn01"
              android:text="MS"/>
             <Button
              style="@style/btn01"
              android:text="M+"/>
              <Button
              style="@style/btn01"
              android:text="M-"/>
        </TableRow>
        <TableRow 
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

            <Button
                style="@style/btn01"
                android:text="←" />

           <Button
              style="@style/btn01"
              android:text="CE"/>
            <Button
              style="@style/btn01"
              android:text="C"/>
             <Button
              style="@style/btn01"
              android:text="±"/>

             <Button
              style="@style/btn01"
              android:text="√" />

        </TableRow>
        <TableRow 
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
          <Button
              style="@style/btn01"
              android:text="7"/>
           <Button
              style="@style/btn01"
              android:text="8"/>
            <Button
              style="@style/btn01"
              android:text="9"/>
             <Button
              style="@style/btn01"
              android:text="/"/>
              <Button
              style="@style/btn01"
              android:text="%"/>
        </TableRow>
        <TableRow 
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
          <Button
              style="@style/btn01"
              android:id="@+id/four"
              android:text="4"/>
           <Button
              style="@style/btn01"
              android:text="5"/>
            <Button
              style="@style/btn01"
              android:text="6"/>
             <Button
              style="@style/btn01"
              android:text="*"/>
              <Button
              style="@style/btn01"
              android:text="1/x"/>
        </TableRow>      
    </TableLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/one"
            style="@style/btn01"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="#0000ff"
            android:textStyle="bold" />

        <Button 
            android:id="@+id/two"
            style="@style/btn01"
            android:layout_alignTop="@+id/one"
            android:layout_toRightOf="@+id/one"
            android:text="2"/>
        <Button 
            android:id="@+id/three"
            style="@style/btn01"
            android:layout_alignTop="@+id/two"
            android:layout_toRightOf="@+id/two"
            android:text="3"/>
        <Button 
            android:id="@+id/minus"
            style="@style/btn01"
            android:layout_alignTop="@+id/three"
            android:layout_toRightOf="@+id/three"
            android:text="-"/>
        <Button 
            android:id="@+id/equal"
            style="@style/btn03"
            android:layout_alignTop="@+id/minus"
            android:layout_toRightOf="@+id/minus"
            android:gravity="center"
            android:text="="/>
        <Button 
            android:id="@+id/plus"
            style="@style/btn01"
            android:layout_alignTop="@+id/equal"
            android:layout_toRightOf="@+id/equal"
            android:text="+"/>
        <Button 
            android:id="@+id/dot"
            style="@style/btn01"
            android:layout_alignTop="@+id/plus"
            android:layout_toRightOf="@+id/plus"
            android:text="."/>
        <Button 
            style="@style/btn02"
            android:layout_alignTop="@+id/dot"
            android:layout_toRightOf="@+id/dot"
            android:text="0"/> "
    </RelativeLayout>
    

</LinearLayout>